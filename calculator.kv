<Button>
    font_size: 32
    background_color: (0, 0, 0, 1)
    bold: True

<Calc>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        spacing: 10
        padding: 10

        TextInput:
            id: calc_input
            text: '0'
            font_size: 32
            multiline: False
            background_color: (0, 0, 0, 1)
            foreground_color: (1, 1, 1, 1)
            size_hint_y: 0.2

        Widget:
            size_hint_y: 0.01
            canvas.before:
                Color:
                    rgba: (0.5, 0.5, 0.5, 1)
                Line:
                    points: [self.x, self.y, self.right, self.y]
                    width: 1

        GridLayout:
            cols: 4
            spacing : 5

            Button:
                text: 'AC'
                background_color: (0, 0, 0, 1)
                color: (1, 0.4, 0, 1)
                on_press: root.clear()
            Button:
                text: 'Pow'
                on_press: root.btn_add('**')
                color: (1, 0.4, 0, 1)
            Button:
                text: '%'
                on_press: root.btn_add(self.text)
                color: (1, 0.4, 0, 1)
            Button:
                text: '/'
                on_press: root.btn_add(self.text)
                color: (1, 0.4, 0, 1)
            Button:
                text: '7'
                on_press: root.btn_add(self.text)
            Button:
                text: '8'
                on_press: root.btn_add(self.text)
            Button:
                text: '9'
                on_press: root.btn_add(self.text)
            Button:
                text: 'x'
                on_press: root.btn_add('*')
                color: (1, 0.4, 0, 1)
            Button:
                text: '4'
                on_press: root.btn_add(self.text)
            Button:
                text: '5'
                on_press: root.btn_add(self.text)
            Button:
                text: '6'
                on_press: root.btn_add(self.text)
            Button:
                text: '-'
                on_press: root.btn_add(self.text)
                color: (1, 0.4, 0, 1)
            Button:
                text: '1'
                on_press: root.btn_add(self.text)
            Button:
                text: '2'
                on_press: root.btn_add(self.text)
            Button:
                text: '3'
                on_press: root.btn_add(self.text)
            Button:
                text: '+'
                on_press: root.btn_add(self.text)
                color: (1, 0.4, 0, 1)
            Button:
                text: 'Ï€'
                on_press: root.btn_add('3.14159')
            Button:
                text: '0'
                on_press: root.btn_add(self.text)
            Button:
                text: '.'
                on_press: root.btn_add(self.text)
            Button:
                text: '='
                background_normal: ''
                background_color: (1, 0.4, 0, 1)
                color: (1, 1, 1, 1)
                on_press: root.calculate()
